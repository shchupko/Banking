  
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width" />
    @* <link href="~/Content/bootstrap.css" rel="stylesheet" />*@
    @* <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />*@

    <link href="~/Content/StyleSheet1.less" type="text/css" rel="content" />
    <link href="~/Content/StyleSheet1.css" rel="stylesheet" />
    <link href="~/Content/jquery.qtip.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/less.js" type="text/javascript"></script>

    <script src="@Url.Content("~/Scripts/jquery-2.1.4.min.js")" type="text/javascript"> </script>
    <script src="~/Scripts/jquery.validate-vsdoc.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.qtip.js" type="text/javascript"></script>

    <title>Banking</title>
</head>
<body>

    <div class="Header">
        @*<img src="~/BankingLogo.jpg" />*@
        @using (Html.BeginForm("Index", "Home"))
        {
            <input type="image" src="~/Content/BankingLogo.png" alt="Submit" width="30" height="30" />
            @Html.ActionLink("Welcome to online banking system", "Index", "Home")
        }

        <div class="Logof">
            @if (User.Identity.IsAuthenticated)
            {
                <text>
                    You are logged in as
                    <b>@User.Identity.Name</b>.
                </text>
                @Html.ActionLink(" Logout", "SignOut", "User")
            }
        </div>
    </div>

    <div class="Content">
        @RenderBody()
    </div>

    <div class="Footer">
        @Html.Raw("@")
        @DateTime.Now.Year@*@(string.Format("{0:yyyy}", DateTime.Now))*@
        Online Banking. All rights reserved.
    </div>

</body>
</html>
<script type="text/javascript" language="javascript">
    $(function () {
        $("input:image").mouseover(function () {
            $(this).animate({ height: '+=20', width: '+=20' });
        });
        $("input:image").mouseout(function () {
            $(this).animate({ height: '-=20', width: '-=20' });
        });
    });
</script>