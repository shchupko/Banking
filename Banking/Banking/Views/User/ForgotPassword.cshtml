@model Banking.Domain.Models.ViewModels.ForgotPasswordView

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("ForgotPassword", "User", FormMethod.Post))
{
    <h4>Please type next data:</h4>
    @Html.ValidationSummary()
<div>
    @if (ViewBag.Msg == null)
    {
        <label for="Email">Email<em>*</em></label>
        @Html.TextBox("Email", Model.Email, new { required = "required", type = "email" })
        <errormsg> @Html.ValidationMessage("Email") </errormsg><br>

        <input type="submit" value="Send mail" class="btn"/>
        @Html.ActionLink("Cancel", "Login", null, null, new {@class = "btn"})
    }
    else
    {
        <p>@ViewBag.Msg</p>
        @Html.ActionLink("Rerurn", "Login", null, null, new { @class = "btn" })
    } 
</div>
}